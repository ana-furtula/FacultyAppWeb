@using FacultyAppWeb.Models.Subjects
@{
    ViewData["Title"] = "Subjects";
}

@model SubjectsViewModel


<h2>Subjects</h2>

@if (Model!=null)
{
     if (Model.MessageSuccess != null)
    {
        <div class="alert alert-success">@Model.MessageSuccess</div>
    }
    else
    {
        if(Model.MessageError != null)
        {
             <div class="alert alert-danger">@Model.MessageError</div>
        }
    }
}

<form method="get" asp-controller="Students">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Name" />
            <span class="input-group-append">
                <button class="btn btn-primary">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>ESPB</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model.Subjects)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.ESPB</td>
                <td>@subject.Semester</td>
                <td>
                    <a class="btn btn-secondary" asp-area="" asp-route-id="@subject.Id" asp-controller="Subjects" asp-action="Edit">
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-area="" asp-route-id="@subject.Id" asp-controller="Subjects" asp-action="Delete">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="padding:1rem 1rem 1rem 1rem">
    <a class="btn btn-primary" asp-controller="Subjects" asp-action="Create">
        New
    </a>
</div>