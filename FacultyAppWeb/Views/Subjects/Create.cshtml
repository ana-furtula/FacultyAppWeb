@using FacultyAppWeb.Domains
@using FacultyAppWeb.Models.Subjects
@{
}

@model CreateSubjectViewModel

@if (Model!=null && Model.MessageCreate != null)
{
    <div class="alert alert-danger">@Model.MessageCreate</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Subject.Name"></label>
        <input asp-for = "@Model.Subject.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Subject.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Subject.ESPB"></label>
        <input asp-for = "@Model.Subject.ESPB" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Subject.ESPB"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Subject.Semester"></label>
        <input asp-for = "@Model.Subject.Semester" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Subject.Semester"></span>
    </div>
        <br />
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
