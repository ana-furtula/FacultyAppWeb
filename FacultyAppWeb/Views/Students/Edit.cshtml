@using FacultyAppWeb.Models.Students
@{
    ViewData["Title"] = "Edit";
}

@model EditStudentViewModel


<h1>Editing @Model.FirstName @Model.LastName @Model.Index</h1>

<form method="post">
    <input type="hidden" asp-for = "@Model.Id" />
    <input type="hidden" asp-for = "@Model.Index" />
    <input type="hidden" asp-for = "@Model.JMBG" />

    <div class="form-group">
        <label asp-for="@Model.FirstName">First name</label>
        <input asp-for = "@Model.FirstName" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName">Last name</label>
        <input asp-for = "@Model.LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.LastName"></span>
    </div>
    <br />
    <div>
    <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>