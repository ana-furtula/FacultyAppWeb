@using FacultyAppWeb.Models.ExamRegistrations

@model EditExamRegistrationViewModel

@if (Model != null && Model.MessageError != null)
{
    <div class="alert alert-danger">@Model.MessageError</div>
}

<form method="post">
    <input type="hidden" asp-for = "@Model.ExamRegistration.Id" />
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Student.FirstName">Student's first name</label>
        <input asp-for = "@Model.ExamRegistration.Student.FirstName" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Student.LastName">Student's last name</label>
        <input asp-for = "@Model.ExamRegistration.Student.LastName" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Student.Index">Index</label>
        <input asp-for = "@Model.ExamRegistration.Student.Index" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Subject.Name">Subject name</label>
        <input asp-for = "@Model.ExamRegistration.Subject.Name" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Subject.Semester">Semester</label>
        <input asp-for = "@Model.ExamRegistration.Subject.Semester" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.RegistrationDate">Registration date</label>
        <input asp-for = "@Model.ExamRegistration.RegistrationDate" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label>Select professor</label>
        <div class="col-md-5">
            @Html.DropDownListFor(x => Model.SelectedProfessor, new SelectList(Model.Professors, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Professor"})
            @Html.ValidationMessageFor(x => x.SelectedProfessor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExamRegistration.Grade">Grade</label>
        <input asp-for = "@Model.ExamRegistration.Grade" class="form-control"/>
    </div>
    <div class = "form-group">
        <label>Editable: </label>
        <div class="col-md-5">
         <span>@Html.RadioButtonFor(Model => Model.ExamRegistration.IsLocked,"true") False</span>
         <span>@Html.RadioButtonFor(Model => Model.ExamRegistration.IsLocked,"false") True</span>
         </div>
    </div>
    <br />
    <div>
    <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
